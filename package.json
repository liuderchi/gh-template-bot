{
  "name": "gh-template-bot",
  "version": "0.1.0-alpha",
  "description": "Bot to generate markdown templates for different issues and pull requests",
  "author": "liuderchi <liuderchi@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/liuderchi/gh-template-bot.git",
  "scripts": {
    "start": "probot run ./src/index.js",
    "start:nodemon": "nodemon --exec 'npm start'",
    "jest": "jest",
    "eslint": "eslint ./",
    "flow": "flow check",
    "codecov": "codecov",
    "lint": "npm run eslint",
    "test": "npm run jest && npm run flow && npm run codecov",
    "changelog": "github-changes -o liuderchi -r gh-template-bot -b master -f ./CHANGELOG.md -t CHANGELOG --order-semver --use-commit-body"
  },
  "dependencies": {
    "handlebars": "^4.1.2",
    "minimist": "^1.2.0",
    "probot": "^3.0.0",
    "ramda": "^0.25.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-plugin-prettier": "^2.3.1",
    "flow-bin": "^0.59.0",
    "github-changes": "^1.1.1",
    "jest": "^21.2.1",
    "localtunnel": "^1.8.2",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 10"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.flow.js"
    ],
    "coverageDirectory": "./coverage/",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/",
      "<rootDir>/flow-typed/"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
